@page "/fetchproducts"
@inject HttpClient Http

<h3>Product List</h3>

@if (isLoading)
{
    <p><em>Loading products...</em></p>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        <strong>Error:</strong> @errorMessage
    </div>
}
else if (products != null && products.Length > 0)
{
    <ul class="list-group">
        @foreach (var product in products)
        {
            <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <strong>@product.Name</strong> - $@product.Price.ToString("F2")
                        @if (product.Category != null)
                        {
                            <br />
                            <small class="text-muted">Category: @product.Category.Name</small>
                        }
                    </div>
                    <span class="badge bg-primary rounded-pill">Stock: @product.Stock</span>
                </div>
            </li>
        }
    </ul>
}
else
{
    <p>No products available.</p>
}

@code {
    private Product[]? products;
    private bool isLoading = true;
    private string? errorMessage;
    
    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Call the updated API endpoint with proper error handling
            var response = await Http.GetAsync("http://localhost:5074/api/productlist");
            response.EnsureSuccessStatusCode();
            
            // Get the JSON string for better error handling
            var json = await response.Content.ReadAsStringAsync();
            
            // Deserialize the JSON response into Product array with error handling
            products = System.Text.Json.JsonSerializer.Deserialize<Product[]>(json, 
                new System.Text.Json.JsonSerializerOptions 
                { 
                    PropertyNameCaseInsensitive = true 
                });
            
            if (products == null)
            {
                errorMessage = "Failed to deserialize product data.";
            }
            else
            {
                errorMessage = null;
            }
        }
        catch (HttpRequestException ex)
        {
            errorMessage = $"Network error: {ex.Message}. Please ensure the server is running.";
            Console.WriteLine($"Error: {ex.Message}");
        }
        catch (System.Text.Json.JsonException ex)
        {
            errorMessage = $"JSON parsing error: {ex.Message}. The API response format may be incorrect.";
            Console.WriteLine($"Error: {ex.Message}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Unexpected error: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }    public class Product
    {
        public int Id { get; set; }
        public string? Name { get; set; }
        public double Price { get; set; }
        public int Stock { get; set; }
        public Category? Category { get; set; }
    }

    public class Category
    {
        public int Id { get; set; }
        public string? Name { get; set; }
    }
}